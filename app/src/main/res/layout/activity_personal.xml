    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/Bed"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:clickable="false"
                android:contentDescription="Caocap_boutton"
                android:focusable="false"
                android:scaleX="1"
                android:scaleY="1"
                app:backgroundTint="@color/black"
                app:fabCustomSize="75dp"
                app:fabSize="auto"
                app:hideMotionSpec="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.95"
                app:rippleColor="@null"
                app:showMotionSpec="@null" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/prfile_activity_caocap_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:contentDescription="Caocap_boutton"
                android:focusable="true"

                android:visibility="visible"
                app:backgroundTint="@color/caocapButtonColor"
                app:fabCustomSize="60dp"
                app:fabSize="auto"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.9399"
                app:rippleColor="@color/caocapDefaultBackground" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
