<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/caocapDefaultBackground"
        tools:context=".Explore">

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewExplore"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="32dp"
            android:background="@color/caocapDefaultBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/exploreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/explore"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/recyclerViewExplore"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    <Button
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/navButton"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" android:textColor="#4BA6F8"
            android:textSize="30sp" style="@style/Widget.AppCompat.Button.Borderless.Colored"
            />
    <View
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:id="@+id/nav_circle_view"
            android:background="@drawable/nav_circle_view"
            app:layout_constraintTop_toTopOf="@+id/navButton"
            app:layout_constraintBottom_toBottomOf="@+id/navButton"
            app:layout_constraintStart_toStartOf="@+id/navButton" app:layout_constraintEnd_toEndOf="@+id/navButton"
            />

    <View
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/nav_layer0"
            android:background="@drawable/rounded_nav_button_layer0"
            app:layout_constraintTop_toTopOf="@+id/navButton"
            app:layout_constraintBottom_toBottomOf="@+id/navButton"
            app:layout_constraintStart_toStartOf="@+id/navButton" app:layout_constraintEnd_toEndOf="@+id/navButton"/>
    <View
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:id="@+id/nav_layer1"
            android:background="@drawable/rounded_nav_button_layer1"
            app:layout_constraintTop_toTopOf="@+id/nav_layer0"
            app:layout_constraintBottom_toBottomOf="@+id/nav_layer0"
            app:layout_constraintStart_toStartOf="@+id/nav_layer0"
            app:layout_constraintEnd_toEndOf="@+id/nav_layer0"/>
    <View
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:id="@+id/nav_layer2"
            android:background="@drawable/rounded_nav_button_layer2"
            app:layout_constraintTop_toTopOf="@+id/nav_layer1" app:layout_constraintBottom_toBottomOf="@+id/nav_layer1"
            app:layout_constraintStart_toStartOf="@+id/nav_layer1" app:layout_constraintEnd_toEndOf="@+id/nav_layer1"/>


</androidx.constraintlayout.widget.ConstraintLayout>