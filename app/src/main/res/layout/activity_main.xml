<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#313943">

    <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="orbiting"
            android:id="@+id/orbitingTextView"
            android:textAlignment="center"
            android:textColor="#CCFAFAFA" android:fontFamily="@font/neosansarabic"
            app:layout_constraintStart_toEndOf="@+id/userImageView" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/caocapsTextView"
            app:layout_constraintTop_toTopOf="@+id/caocapsTextView"
            app:layout_constraintBottom_toBottomOf="@+id/caocapsTextView"/>
    <Button
            android:text="o"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/button"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" android:backgroundTint="#2B2B2B" android:textColor="#4BA6F8"
            android:textSize="30sp"/>
    <TextView
            android:text="caocaps"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/caocapsTextView"
            android:textAlignment="center"
            android:textColor="#CCFAFAFA" android:fontFamily="@font/neosansarabic"
            app:layout_constraintStart_toEndOf="@+id/orbitingTextView"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/friendsTextView"
            app:layout_constraintTop_toTopOf="@+id/friendsTextView"
            app:layout_constraintBottom_toBottomOf="@+id/friendsTextView"/>
    <TextView
            android:text="friends"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/friendsTextView"
            android:textAlignment="center"
            android:textColor="#CCFAFAFA" android:fontFamily="@font/neosansarabic"
            app:layout_constraintStart_toEndOf="@+id/caocapsTextView"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/userImageView" android:layout_marginBottom="5dp"/>
    <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp" tools:srcCompat="@tools:sample/avatars[15]"
            android:id="@+id/userImageView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="30dp"
            android:layout_marginTop="80dp" app:layout_constraintTop_toTopOf="parent" android:background="#FFFFFF"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/bioTextView"
            app:layout_constraintStart_toStartOf="@+id/nameTextView"
            app:layout_constraintEnd_toEndOf="@+id/nameTextView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/nameTextView"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/guideline4" app:layout_constraintVertical_bias="0.0"
            android:text="bio this is the user's bio this is the user's bio this is the user's bio this is the user's bio er's bio this is the user's bio this is the user's bio this is the user's bio this is the user's bio er's bio this is the user's bio this is the user's bio this is the user's bio this is the user's bio er's bio this is the user's bio this is the user's bio this is the user's bio this is the user's bio er's bio this is the user's bio this is the user's bio this is the user's bio this is the user's bio "
            android:visibility="visible" android:textColor="#CCFFFFFF" android:fontFamily="@font/neosansarabic"/>
    <TextView
            android:text="the user name "
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:id="@+id/nameTextView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="30dp"
            app:layout_constraintStart_toStartOf="@+id/userImageView" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/userImageView" android:textColor="#FAFAFA" android:textSize="24sp"
            android:fontFamily="@font/neosansarabic"/>
    <TextView
            android:text="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/friendsCounterTextView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/friendsTextView"
            app:layout_constraintEnd_toEndOf="@+id/friendsTextView"
            app:layout_constraintStart_toStartOf="@+id/friendsTextView" android:textColor="#FAFAFA"
            android:textSize="22sp"
            android:fontFamily="@font/neosansarabic" android:textAlignment="center"/>
    <TextView
            android:text="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/caocapsCounterTextView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/caocapsTextView"
            app:layout_constraintEnd_toEndOf="@+id/caocapsTextView"
            app:layout_constraintStart_toStartOf="@+id/caocapsTextView" android:textColor="#FAFAFA"
            android:textSize="22sp"
            android:fontFamily="@font/neosansarabic" android:textAlignment="center"/>
    <TextView
            android:text="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/orbitingCounterTextView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/orbitingTextView"
            app:layout_constraintEnd_toEndOf="@+id/orbitingTextView"
            app:layout_constraintStart_toStartOf="@+id/orbitingTextView" android:textColor="#FAFAFA"
            android:textSize="22sp"
            android:fontFamily="@font/neosansarabic" android:textAlignment="center"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline4"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.4"/>
    <Button
            android:text="+"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/button2"
            android:background="#00FFFFFF" android:textAlignment="center" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/button" app:layout_constraintBottom_toBottomOf="@+id/button"
            android:layout_marginEnd="30dp" android:textColor="#FAFAFA" android:textSize="30sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>