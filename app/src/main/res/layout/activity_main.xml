<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Controller.MainActivity" android:background="#313943">

    <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="orbiting"
            android:id="@+id/orbitingTextView"
            android:textAlignment="center"
            android:textColor="#CCFAFAFA" android:fontFamily="@font/neosansarabic"
            app:layout_constraintStart_toEndOf="@+id/userImageView" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/caocapsTextView"
            app:layout_constraintTop_toTopOf="@+id/caocapsTextView"
            app:layout_constraintBottom_toBottomOf="@+id/caocapsTextView"/>
    <TextView
            android:text="caocaps"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/caocapsTextView"
            android:textAlignment="center"
            android:textColor="#CCFAFAFA" android:fontFamily="@font/neosansarabic"
            app:layout_constraintStart_toEndOf="@+id/orbitingTextView"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/friendsTextView"
            app:layout_constraintTop_toTopOf="@+id/friendsTextView"
            app:layout_constraintBottom_toBottomOf="@+id/friendsTextView"/>
    <TextView
            android:text="friends"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/friendsTextView"
            android:textAlignment="center"
            android:textColor="#CCFAFAFA" android:fontFamily="@font/neosansarabic"
            app:layout_constraintStart_toEndOf="@+id/caocapsTextView"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/userImageView" android:layout_marginBottom="5dp"/>
    <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp" tools:srcCompat="@tools:sample/avatars[15]"
            android:id="@+id/userImageView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="30dp"
            android:layout_marginTop="80dp" app:layout_constraintTop_toTopOf="parent" android:background="#FFFFFF"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/bioTextView"
            app:layout_constraintStart_toStartOf="@+id/nameTextView"
            app:layout_constraintEnd_toEndOf="@+id/nameTextView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/nameTextView"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/guideline4" app:layout_constraintVertical_bias="0.0"
            android:text="bio this is the user's bio this is the user's bio this is the user's bio this is the user's bio er's bio this is the user's bio this is the user's bio this is the user's bio this is the user's bio er's bio this is the user's bio this is the user's bio this is the user's bio this is the user's bio er's bio this is the user's bio this is the user's bio this is the user's bio this is the user's bio er's bio this is the user's bio this is the user's bio this is the user's bio this is the user's bio "
            android:visibility="visible" android:textColor="#CCFFFFFF" android:fontFamily="@font/neosansarabic"/>
    <TextView
            android:text="the user name "
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:id="@+id/nameTextView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="30dp"
            app:layout_constraintStart_toStartOf="@+id/userImageView" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/userImageView" android:textColor="#FAFAFA" android:textSize="24sp"
            android:fontFamily="@font/neosansarabic"/>
    <TextView
            android:text="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/friendsCounterTextView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/friendsTextView"
            app:layout_constraintEnd_toEndOf="@+id/friendsTextView"
            app:layout_constraintStart_toStartOf="@+id/friendsTextView" android:textColor="#FAFAFA"
            android:textSize="22sp"
            android:fontFamily="@font/neosansarabic" android:textAlignment="center"/>
    <TextView
            android:text="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/caocapsCounterTextView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/caocapsTextView"
            app:layout_constraintEnd_toEndOf="@+id/caocapsTextView"
            app:layout_constraintStart_toStartOf="@+id/caocapsTextView" android:textColor="#FAFAFA"
            android:textSize="22sp"
            android:fontFamily="@font/neosansarabic" android:textAlignment="center"/>
    <TextView
            android:text="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/orbitingCounterTextView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/orbitingTextView"
            app:layout_constraintEnd_toEndOf="@+id/orbitingTextView"
            app:layout_constraintStart_toStartOf="@+id/orbitingTextView" android:textColor="#FAFAFA"
            android:textSize="22sp"
            android:fontFamily="@font/neosansarabic" android:textAlignment="center"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline4"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.4"/>
    <Button
            android:text="+"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/button2"
            android:background="#00FFFFFF" android:textAlignment="center" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/navButton" app:layout_constraintBottom_toBottomOf="@+id/navButton"
            android:layout_marginEnd="30dp" android:textColor="#FAFAFA" android:textSize="30sp"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"/>
    <View
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:id="@+id/nav_circle_view"
            android:background="@drawable/nav_circle_view"
            app:layout_constraintTop_toTopOf="@+id/navButton"
            app:layout_constraintBottom_toBottomOf="@+id/navButton"
            app:layout_constraintStart_toStartOf="@+id/navButton" app:layout_constraintEnd_toEndOf="@+id/navButton"
    />
    <Button
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/navButton"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" android:textColor="#4BA6F8"
            android:textSize="30sp" style="@style/Widget.AppCompat.Button.Borderless.Colored"
    />
    <View
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/nav_layer0"
            android:background="@drawable/rounded_nav_button_layer0"
            app:layout_constraintTop_toTopOf="@+id/navButton"
            app:layout_constraintBottom_toBottomOf="@+id/navButton"
            app:layout_constraintStart_toStartOf="@+id/navButton" app:layout_constraintEnd_toEndOf="@+id/navButton"/>
    <View
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:id="@+id/nav_layer1"
            android:background="@drawable/rounded_nav_button_layer1"
            app:layout_constraintTop_toTopOf="@+id/nav_layer0"
            app:layout_constraintBottom_toBottomOf="@+id/nav_layer0"
            app:layout_constraintStart_toStartOf="@+id/nav_layer0"
            app:layout_constraintEnd_toEndOf="@+id/nav_layer0"/>
    <View
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:id="@+id/nav_layer2"
            android:background="@drawable/rounded_nav_button_layer2"
            app:layout_constraintTop_toTopOf="@+id/nav_layer1" app:layout_constraintBottom_toBottomOf="@+id/nav_layer1"
            app:layout_constraintStart_toStartOf="@+id/nav_layer1" app:layout_constraintEnd_toEndOf="@+id/nav_layer1"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/stat_notify_chat"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/nav_circle_view"
            app:layout_constraintEnd_toEndOf="@+id/nav_circle_view" android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="@+id/nav_circle_view"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_compass"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="@+id/nav_circle_view" android:layout_marginStart="30dp"
            android:layout_marginTop="50dp" app:layout_constraintTop_toTopOf="@+id/nav_circle_view"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_myplaces"
            android:id="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="@+id/nav_circle_view" android:layout_marginEnd="30dp"
            android:layout_marginTop="50dp" app:layout_constraintTop_toTopOf="@+id/nav_circle_view"/>

</androidx.constraintlayout.widget.ConstraintLayout>